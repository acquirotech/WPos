<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:grid="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.HomeActivity"
    android:orientation="vertical"
    android:background="#DEDEDE">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:gravity="right"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:text="â‚¹0.00"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.GridLayout
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="4"
        app:rowCount="4">

        <!--First Row Buttons-->
        <Button
            android:id="@+id/btn1"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:text="1"
            android:tag="1"
            android:gravity="center"
            android:background="@drawable/btn_click"
            app:layout_column="0"
            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            grid:layout_rowWeight="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn2"
            android:gravity="center"
            android:tag="2"
            android:background="@drawable/btn_click"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:text="2"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            grid:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/btn3"
            android:gravity="center"
            android:background="@drawable/btn_click"
            android:tag="3"
            android:layout_width="0dp"
            android:layout_height="@dimen/button_height"
            android:text="3"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            grid:layout_rowWeight="1"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="0" />

        <Button
            android:id="@+id/btnBack"
            android:gravity="center"
            android:background="@drawable/btn_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/button_back"
            android:layout_marginBottom="@dimen/button_margin"
            app:layout_column="3"
            app:layout_gravity="fill_vertical"
            app:layout_columnWeight="1"
            app:layout_rowSpan="2"
            app:layout_row="0" />

        <!--Second Row Buttons-->
        <Button
            android:id="@+id/btn4"
            android:gravity="center"
            android:background="@drawable/btn_click"
            android:layout_width="0dp"
            android:tag="4"
            android:layout_height="@dimen/button_height"
            android:text="4"
            android:layout_marginBottom="@dimen/button_margin"
            android:layout_marginRight="@dimen/button_margin"
            grid:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn5"
            android:gravity="center"
            android:background="@drawable/btn_click"
            android:layout_width="0dp"
            android:tag="5"
            android:layout_height="@dimen/button_height"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            grid:layout_rowWeight="1"
            android:text="5"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <Button
            android:id="@+id/btn6"
            android:gravity="center"
            android:background="@drawable/btn_click"
            android:layout_width="0dp"
            android:tag="6"
            android:layout_height="@dimen/button_height"
            android:text="6"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            grid:layout_rowWeight="1"
            app:layout_column="2"
            app:layout_columnWeight="1"
            app:layout_row="1" />

        <!--Third Row Buttons-->
        <Button
            android:id="@+id/btn7"
            android:gravity="center"
            android:background="@drawable/btn_click"
            android:layout_width="0dp"
            android:tag="7"
            android:layout_height="@dimen/button_height"
            android:text="7"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            grid:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn8"
            android:gravity="center"
            android:background="@drawable/btn_click"
            android:layout_width="0dp"
            android:tag="8"
            android:layout_height="@dimen/button_height"
            android:text="8"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            grid:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btn9"
            android:gravity="center"
            android:background="@drawable/btn_click"
            android:layout_width="0dp"
            android:tag="9"
            android:layout_height="@dimen/button_height"
            android:text="9"
            app:layout_column="2"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            grid:layout_rowWeight="1"
            app:layout_columnWeight="1"
            app:layout_row="2" />

        <Button
            android:id="@+id/btnEnter"
            android:gravity="center"
            android:background="@drawable/btn_click"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textColor="@color/button_enter"
            app:layout_rowSpan="2"
            android:layout_marginBottom="@dimen/button_margin"
            app:layout_gravity="fill_vertical"
            app:layout_column="3"
            app:layout_columnWeight="1"
            app:layout_row="2" />


        <!--Fourth Row Buttons-->
        <Button
            android:id="@+id/btn00"
            android:gravity="center"
            android:background="@drawable/btn_click"
            android:layout_width="0dp"
            android:tag="C"
            android:layout_height="@dimen/button_height"
            android:text="C"
            android:textColor="@color/button_clear"
            app:layout_column="0"
            grid:layout_rowWeight="1"
            android:layout_marginRight="@dimen/button_margin"
            android:layout_marginBottom="@dimen/button_margin"
            app:layout_columnWeight="1"
            app:layout_row="3" />

        <Button
            android:id="@+id/btn0"
            android:gravity="center"
            android:background="@drawable/btn_click"
            android:layout_width="0dp"
            android:tag="0"
            android:layout_height="@dimen/button_height"
            android:layout_marginBottom="@dimen/button_margin"
            android:text="0"
            android:layout_marginRight="@dimen/button_margin"
            grid:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_columnSpan="2"
            app:layout_columnWeight="1"
            app:layout_row="3" />
    </android.support.v7.widget.GridLayout>


</LinearLayout>